<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prayaas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    
        <!--  HEADER -->

        <header class="main-header clearfix" data-sticky_header="true">

            <div class="top-bar clearfix">

                <div class="container">

                    <div class="row">

                        <div class="col-md-8 col-sm-12">

                            <p>
                                <span><i class="fa fa-building-o"></i> <strong>Contact: </strong> Plot No F-7, Industrial Area, Phase 8, Pune</span>
                                <span>&nbsp;<i class="fa fa-phone"></i> <strong>Call Us:</strong> +91-810-972-4077</span>
                            </p>

                        </div>

                        <div class="col-md-4col-sm-12">
                            <div class="top-bar-social">
                                <a href="https://www.facebook.com/Cognizant"><i class="fa fa-facebook rounded-box"></i></a>
                                <a href="https://twitter.com/cognizant"><i class="fa fa-twitter rounded-box"></i></a>  
                                <a href="https://www.instagram.com/cognizant/"><i class="fa fa-instagram rounded-box"></i></a>
                                <a href="https://www.youtube.com/cognizant"><i class="fa fa-youtube rounded-box"></i></a>
                                @*<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>                   
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Registration">SignUp</a>
                        *@
                                 
                                   
                            </div>
                           
                        </div>

                    </div>

                </div> <!--  end .container -->

            </div> <!--  end .top-bar  -->

            <section class="header-wrapper navgiation-wrapper">

                <div class="navbar navbar-default">
                    <div class="container">

                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="logo" href="../Home/Index"><img alt="" src="~/images/logo.png" height="98px" ></a>
                        </div>
                    
                      
                    </div>
                </div>

            </section>

        </header> <!-- end main-header  -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Prayaas_Website - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
